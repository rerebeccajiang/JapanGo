<% layout('layouts/boilerplate') %>
<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <form action="/register" class="validated-form" style="width: 23rem" method="POST" novalidate>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">Register</h3>

            <div class="form-outline mb-4">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" required />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="email" required />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required />
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-success">Register</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://res.cloudinary.com/dvluzn1gq/image/upload/v1685132553/Japango/ice-tea-ic22i2JniCs-unsplash_k72jdl.jpg" alt="Login image" class="w-100 vh-100" id="login-register-image" />
      </div>
    </div>
  </div>
</section>
